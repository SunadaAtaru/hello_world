<%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      
    
      <h2>パスワード再設定</h2>
        <%= form_with model: @user, url: user_password_path, local: true do |f| %>
          <%# <%= render "devise/shared/error_messages", resource: resource %> 
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-5' %>
          </div>

          <div class="actions">
            <%= f.submit "パスワードのリセット手順を送信してください", class: 'btn btn-primary ' %>
          </div>
      <% end %>
      <%# <%= render "devise/shared/links" %> 
     </div>
  </div>
</div>

      

      

    
