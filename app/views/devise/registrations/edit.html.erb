<%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

    <%# <h2 class="text-center">ユーザー編集</h2> %>
    <h2 class="text-center mt-4">ユーザー編集<%= @resource_name.to_s.humanize %></h2>

    <%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %> 
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-4' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :password %> <i>(変更しない場合は空白にしてください。)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control mb-1' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control mt-1 mb-2' %>
      </div>
      
      <div class="form-group">
        <%= f.label :current_password %> <i>(変更を確認するために、現在のパスワードが必要です。)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" , class: 'form-control mb-3' %>
      </div>
      

      <div class="form-group">
        <%= f.submit "更新する" , class: 'btn btn-primary mb-2' %>
      </div>
    <% end %>

    <%# <h3>Cancel my account</h3> %>

    <div> 不満ですか?<%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-secondary mb-2' %></div>

    <%= link_to "戻る", :back, class: 'btn btn-info' %>

  </div>
 </div>
</div>

